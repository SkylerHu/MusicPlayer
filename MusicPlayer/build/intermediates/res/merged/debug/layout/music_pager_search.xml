<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:padding="10dp"
    >
    <Button 
        android:id="@+id/btn_music_search"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_search_selector"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff"
        android:text="@string/rbtn_music_search_string"
        />
    <EditText 
        android:id="@+id/et_music_search"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#cc000000"
        android:layout_toLeftOf="@+id/btn_music_search"
        android:layout_marginRight="5dp"
        android:paddingLeft="5dp"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:hint="@string/pager_music_search_tx"
        />

</RelativeLayout>
